@css {
/*
Stack Editor Header stylesheet
stackeditorheader.styl
*/
}

$accentColor                = #F2778A
$titleColor                 = #424242
$subtleColor                = #A59999
$borderColor                = #E3E3E3

.StackEditorView--header
  margin-bottom             0
  abs                       42px 15px 0 0
  z-index                   1

  .GenericButton
    margin                  5px 5px 0 10px
    padding                 6px 20px 5px
    height                  30px
    &:not(.save-test)
      padding               9px 20px


.StackEditorView--header.readonly
  .GenericButton.save-test
  div.StackEditorView--header-subHeader
    display                 none
  input.kdinput.text
    opacity                 0.5

.StackEditorView--header-subHeader
    abs                     83px 0 0 41px
    display                 flex
    height                  20px
    font-size               13px
    font-weight             300
    .edit-name
      color                 #67A2EE
      text-decoration       none
      margin-right          10px

    .cloned-from-text
      color                 #A59999
      max-width             300px
      ellipsis()

      &:before
        content               ''
        rel()
        borderBox()
        dIBlock()
        border              3px solid #A59999
        rounded             100%
        top                 -1px
        margin-right        5px

    .cloned-from
      color #67A2EE
      cursor pointer
      display initial
      font-size 13px

